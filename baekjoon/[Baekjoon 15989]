#include<iostream>
#define fastio ios::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
using namespace std;

int dp[10001];

void makeDp() {
	int i,k;
	for (i = 0; i <=10000; ++i) {
		dp[i] = 0;
	}
	dp[0] = 1;
	for (i = 1; i <= 10000; ++i) {
		dp[i] = dp[i] + dp[i - 1];
	}
	for (i = 2; i <= 10000; ++i) {
		dp[i] = dp[i] + dp[i - 2];
	}
	for (i = 3; i <= 10000; ++i) {
		dp[i] = dp[i] + dp[i - 3];
	}
}

int main(void)
{
	fastio;
	int i, testcase, num;
	cin >> testcase;
	makeDp();
	for (i = 0; i <testcase; ++i) {
		cin >> num;
		cout << dp[num] << "\n";
	}
	return 0;
}
