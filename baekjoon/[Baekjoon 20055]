#include<stdio.h>

int len, count;
int belt[205];
int robot[101];
int broken=0;

void rotate(){
	int i;
	int last = belt[2*len];
	for(i=2*len; i>1; --i){
		belt[i] = belt[i-1];
	}
	belt[1] = last;
	for(i=len; i>1; --i){
		robot[i] = robot[i-1];
	}
	robot[1] = 0;
	robot[len] = 0;
}

void robotMove(){
	int i;
	
	for(i=len-1; i>=1; --i){
		if(robot[i]!=0){
			if(robot[i+1]==0&&belt[i+1]>0){
				robot[i] = 0;
				robot[i+1] = 1;
				belt[i+1]--;
				if(belt[i+1]==0) broken++;
				if(i+1==len) robot[len]=0;
			}
		}
	}
}

void putRobot(){
	if(belt[1]>0){
		robot[1] = 1;
		belt[1]--;
		if(belt[1]==0) broken++;
	}
}

int solve(){
	int i, ans=1;
	for(i=1; i<=len;++i){
		robot[i] = 0;
	}
	for(i=1; i<=2*len;++i){
		if(belt[i]==0) broken++;
	}
	while(1){
		rotate();
		robotMove();
		putRobot();
		if(broken>=count) break;
		ans++;
	}
	return ans;
}

int main(void)
{
	scanf("%d %d", &len, &count);
	int i;
	for(i=1; i<=2*len; ++i){
		scanf("%d", &belt[i]);
	}	
	printf("%d", solve());
	return 0;
}
