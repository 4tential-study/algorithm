#include<iostream>
#include<string>
#define fastio ios::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
using namespace std;

string str;



int getLongest(){
	int i,k=0, ans = 0;
	int pi[5001];
	pi[0]=0;
	for(i=1; i<str.length(); ++i){
		while(str[i]!=str[k]&&k>0){
			k = pi[k-1];
		}
		if(str[i]==str[k]){
			k++;	
		}
		pi[i] = k;
		ans = max(ans, pi[i]);
	}
	return ans;
}

int solve(){
	int i, ans=0;
	while(str.length()!=0){
		ans = max(ans, getLongest());
		//cout<<str<<endl;
		str = str.substr(1,str.length()-1);
	}
	
	return ans;
}

int main(void)
{
	fastio;
	cin>>str;
	cout<<solve();
	return 0;
}
